/* pages/shopinfo/shopinfo.wxss */
.outborder{
  width:90%;
  margin:1em auto;
}

.search-border{
  width:90%;
  margin:5px auto;
  border-radius:6px;
  box-shadow:0px 0px 5px #eee,0px 0px 5px #eee;
  border:0px solid #333;
  padding:8px 3px;
  font-size:.8em;
}
.search-text{
  border-right:2px solid #999;
  padding:0 8px;
  float:left;
}
.search-content{
  margin-left:5px;
  float:left;
}

.top_pic{
  width:90%;
  height:6em;
  margin:1em auto;
  border-radius:5px;
  border: 1px solid red;
}

.top_pic image{
  width:100%;
  height:100%;
}

.index_nav{
  width:90%;
  height: 6em;
  /* border:1px solid yellow; */
  display:flex;
  justify-content: space-around;
  margin:1em auto;
  overflow:hidden;
}
.nav_ones{
  width:4em;
  height:4em;
  border:1px solid blue;
  border-radius:50%;
  text-align:center;
}
.nav_ones image{
  width:100%;
  height:100%;
}
.h3title{
  /* border:1px solid red; */
  font-weight:bold;
  /* font-family: ""; */
  font-size:1.3em;
}
img{
  width:100%;
  height:100%;
}
.contents_ones{
  height:7rem;
}
.main_content{
  display:flex;
  flex-direction:flex-grow;
}
.contents_left_pic{
  width:10rem;
  height:5.5rem;
  border:1px solid violet;
  border-radius:.6rem;
  overflow:hidden;
  position:relative;
}
.zx{
  position:absolute;
  top:5px;
  left:5px;
  font-size:.9rem;
  background:#FFA302;
  color:white;
  padding:2px .2rem;
  border-radius:.3rem;
}
.active_text{
  width:100%;
  padding-left:.5rem;
}
.explain_desc{
  font-weight:bold;
  font-size:.95rem;
}
.explain_tag1{
  color:#7D7E80;
  font-size:.9rem;
  margin-top:.1rem;
}
.explain_tag1>view{
  display:inline-block;
  margin-right:.5rem;
}
.tag2_sty{
  background:#EBF5F7;
  padding:.2rem .4rem;
  color:#6A858E;
  border-radius:.3rem;
  margin-top:.2rem;
}
.now_price{
  color:#FF532F;
  font-weight:bold;
}
