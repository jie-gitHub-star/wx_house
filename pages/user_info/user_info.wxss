/* pages/user_info/user_info.wxss */
page{
  background-color:rgb(241, 236, 241);
}
.side-top{
  width:90%;
  height:5em;
  margin:10px auto;
  border-radius:5px;
  background-image:'../../icon/userinfo/u207.jpg';
  display:flex;
  direction:colunm;
}

.top_pic{
  width:4rem;
  height:4rem;
  border-radius:50%;
  margin:.5rem;
}
.top_text{
  line-height: 5rem;
  padding-left:10px;
  color:#000;
}
.my_coll{
  background:white;
  border-radius:5px 5px 0 0;
  width:90%;
  height:4rem;
  line-height:4rem;
  margin:5px auto 2px;
  display:flex;
  direction:clounm;
  position:relative;
}
.my_coll>icon{
  line-height:6rem;
}
.my_coll>text{
  padding-left:8px;
  position:relative;
  top:5%;
}
/* //登录按钮 */
.my_coll>.btn-login{
position:absolute;
left:0%;
font-weight: 600;
background-color:white;
line-height:2rem;
width:100%;
}
.outlogin{
  background:white;
  border-radius:0px 0px 5px 5px;
  width:90%;
  height:4rem;
  line-height:4rem;
  margin:1px auto;
  display:flex;
  direction:clounm;
}