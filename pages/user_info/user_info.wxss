page{
  background-color:#F0F0F0;
}
.side-top{
  width:90%;
  height:5em;
  margin:10px auto;
  border:1px solid orange;
  border-radius:5px;
  display:flex;
  direction:colunm;
}
.top_pic{
  width:4rem;
  height:4rem;
  border-radius:50%;
  margin:.5rem;
  border:1px solid red;
}
.top_text{
  line-height: 5rem;
  padding-left:10px;
  color:#fff;
}
.my_coll{
  background:white;
  border-radius:5px 5px 0 0;
  width:90%;
  height:4rem;
  line-height:4rem;
  margin:5px auto 2px;
  display:flex;
  direction:clounm;
}
.my_coll>icon{
  line-height:6rem;
}
.my_coll>text{
  padding-left:8px;
  position:relative;
  top:5%;
}
.outlogin{
  background:white;
  border-radius:0px 0px 5px 5px;
  width:90%;
  height:4rem;
  line-height:4rem;
  margin:1px auto;
  display:flex;
  direction:clounm;
}